// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Pet {
  id    Int     @id @default(autoincrement())
  name  String
  breed String
  sex String
  description String
  available Boolean @default(true)
  age   Int
  image String
}
